<% content_for :title, t('admins.edit.title') %>
<h1><%= t('admins.edit.title')%></h1>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name  ,class: "form-control"%>
  <%= f.label :email %>
  <%= f.email_field :email  ,class: "form-control"%>
  <div class="d-flex justify-content-between">
    <div class="form-group flex-fill mb-2 mr-2">
      <%= f.label :password %>
      <%= f.password_field :password  ,class: "form-control"%>
    </div>
    <div class="form-group flex-fill mb-2 mr-2">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation  ,class: "form-control"%>
    </div>
  </div>
  <%= f.label :admin %>
  <%= f.check_box :admin , id: 'admin_check' %><br>
  <div class="d-flex justify-content-end">
    <%= f.submit t('helpers.submit.create', model: User.model_name.human), id: "create-user",class: "btn btn-primary" %>
  </div>
<% end %>
<%= link_to t('common.back'), admin_users_path, id: "back"%>
