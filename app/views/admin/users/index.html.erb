<h1>ユーザー一覧ページ</h1>
<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= User.human_attribute_name(:male) %></th>
      <th><%= User.human_attribute_name(:admin) %></th>
      <th>タスク数</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? %></td>
        <td><%= link_to t('common.show'), admin_user_path, class: "show-user" %></td>
        <td><%= link_to t('common.edit'), edit_admin_user_path(user), class: "edit-user" %></td>
        <td><%= link_to t('common.destroy'), admin_user_path, method: :delete, data: { confirm: t('common.confirm_destroy') } , class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
