<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) || "Default Title" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <p id="notice"><%= notice %></p>
    <ul>
      <li><%= link_to t('layouts.index-title'), tasks_path, id: "tasks-index" %></li>
      <li><%= link_to t('layouts.new-title'), new_task_path, id: "new-task" %></li>
    </ul>
    <%= yield %>
  </body>
</html>
