<% content_for :title, t('tasks.show.title') %>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1 class="mb-4"><%= t('.title') %></h1>
    <div class="card">
      <div class="card-body">
        <p>
          <strong><%= Task.human_attribute_name(:title) %>:</strong>
          <%= @task.title %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:content) %>:</strong>
          <%= @task.content %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:created_at) %>:</strong>
          <%= @task.created_at.strftime(I18n.t('time.formats.custom')) %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:deadline_on) %>:</strong>
          <%= @task.deadline_on %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:priority) %>:</strong>
          <%= t("enums.task.priority.#{@task.priority}") %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:status) %>:</strong>
          <%= t("enums.task.status.#{@task.status}") %>
        </p>
        <p>
          <strong><%= Task.human_attribute_name(:label) %>:</strong>
          <%= @task.labels.map(&:name).join(" , ") %>
        </p>
        <div class="mt-4">
          <%= link_to t('common.edit'), edit_task_path(@task), class: "btn btn-primary mr-2", id: "edit-task" %>
          <%= link_to t('common.back'), tasks_path, class: "btn btn-secondary", id: "back" %>
        </div>
      </div>
    </div>
  </div>
</div>
