<% content_for :title, t('labels.index.title') %>
<h1><%= t('.title') %></h1>
<table>
  <thead>
    <tr>
      <th><%= Label.human_attribute_name(:name) %></th>
      <th><%= Label.human_attribute_name(:task_count) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td class="label-name"><%= label.name %></td>
        <td><%= label.tasks.size %></td>
        <td><%= link_to t('common.edit'), edit_label_path(label), class: "edit-label" %></td>
        <td><%= button_to t('common.destroy'), label, method: :delete, data: { confirm: t('common.confirm_destroy') } , class: "destroy-label btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
