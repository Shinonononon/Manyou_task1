<% content_for :title, t('sessions.new.title') %>
<h1><%= t('sessions.new.title') %></h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
  <%= f.label 'メールアドレス' %>
  <%= f.email_field :email %>
  <%= f.label 'パスワード' %>
  <%= f.password_field :password %>
  <%= f.submit t('common.log-in'), id:"create-session" %>
<% end %>
